{{#if error.length}}
	<div class="error">{{error}}</div>
{{/if}}
<h1 align="center" style="margin-top: 5%; color: #6D6D6C;">Create account</h1>
<form method="post" class="cform" action="/create">
	<label for="firstName">First name</label>
	<input type="text" name="firstName" id="firstName" placeholder="may be fiction">
	<label for="lastName">Last name</label>
	<input type="text" name="lastName" id="lastName" placeholder="no body will know it">
	<label for="userName">User name</label>
	<input type="text" name="userName" id="userName" placeholder="your unique login">
	<label for="mail">Mail</label>
	<input type="text" name="mail" id="mail" placeholder="to send mail for you">
	<label for="password">Password</label>
	<input type="password" name="password" id="password" placeholder="password">
	<label for="cpassword">Confirm password</label>
	<input type="password" name="confirm" id="cpassword" placeholder="confirm password">
	<input type="submit" name="Send">
	<div class="href">
		<a href="/" style="float: left;">Sign in Account</a>
		<a href="/forgot" style="float: right;">Forgot Password</a>
	</div>
</form> 